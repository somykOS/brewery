{
  "schemaVersion": 1,
  "id": "brewery",
  "version": "${version}",

  "name": "Brewery",
  "description": "Create alcoholic and non-alcoholic drinks with cauldrons and barrels!",
  "authors": [
    "Patbox"
  ],
  "contributors": [
    "somyk"
  ],
  "contact": {
    "homepage": "https://pb4.eu",
    "sources": "https://github.com/Patbox/brewery"
  },

  "license": "LGPLv3",
  "icon": "assets/brewery/icon.png",
  "accessWidener": "brewery.accesswidener",
  "environment": "*",
  "entrypoints": {
    "main": [
      "eu.pb4.brewery.BreweryInit"
    ],
    "client": [
      "eu.pb4.brewery.client.BreweryClientInit"
    ],
    "preLaunch": [
      "eu.pb4.brewery.CardboardWarning"
    ]
  },
  "mixins": [
    "brewery.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": ">=1.21",
    "java": ">=21"
  }
}
